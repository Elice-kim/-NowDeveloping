<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myInfoNested"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elice.speshopapp.more.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ededed">

            <ImageView
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:layout_toRightOf="@+id/myName"
                android:src="@drawable/page_1" />

            <ImageView
                android:id="@+id/myProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_profile" />

            <TextView
                android:id="@+id/myName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myProfile"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:text="홍길동"
                android:textColor="#dd222222"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myName"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:text="example@gmail.com"
                android:textColor="#89000000" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/likeProduct"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="찜한 상품"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000" />

            <TextView
                android:id="@+id/alarmBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="알림"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000" />

            <TextView
                android:id="@+id/askBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="문의하기"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ededed"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="약관 및 정책"
                android:textColor="#dd222222"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="약관"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="개인정보 처리방침"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="오픈소스 라이센스"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="버전정보"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#1e000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="로그아웃"
                android:textColor="#dd222222"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#1e000000" />


        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
